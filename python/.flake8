[flake8]
max-line-length = 100
tee = True
doctests = True
count = True
statistics = True
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/source/conf.py,
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist,
    # The local development venv.
    .ve,
    # The setup script does not need to be linted
    setup.py
per-file-ignores =
    # imported but unused
    src/collatz/__init__.py: F401,
    # do not assign a lambda expression, use a def
    tests/test_parameterised.py: E731
    .demo/_/tree_graph.py: E731
